@font-face {
    font-family: 'lcdzza10px';
    src: url('../fonts/lcdzza-10px-webfont.woff2') format('woff2'),
         url('../fonts/lcdzza-10px-webfont.woff') format('woff');
    font-weight: normal;
    font-style: normal;
}

@font-face {
    font-family: 'lcdzza10px-linien';
    src: url('../fonts/lcdzza-10px-linien-webfont.woff2') format('woff2'),
         url('../fonts/lcdzza-10px-linien-webfont.woff') format('woff');
    font-weight: normal;
    font-style: normal;
}

@font-face {
    font-family: 'linux_libertineregular';
    src: url('../fonts/linlibertine_rah-webfont.woff2') format('woff2'),
         url('../fonts/linlibertine_rah-webfont.woff') format('woff');
    font-weight: normal;
    font-style: normal;

}

@font-face {
    font-family: 'dsa-regular';
    font-style: normal;
    font-weight: normal;
    src: local('5by7 Regular'), url('../fonts/5by7.woff') format('woff');
}

@import url('https://fonts.googleapis.com/css2?family=Anek+Odia:wght@400;600;800&display=swap');
@import url('https://fonts.ggoogleapis.com/css2?family=Source+Sans+Pro:wght@400;600&display=swap');

* {
    font-family: 'Source Sans Pro', sans-serif;
    tab-size: 3;
}

.zugabschnitt{
    font-family: 'Anek Odia', sans-serif;
    font-weight: 600;
    font-size: 16px;
}

.zugabschnitt-eingabe{
    font-family: 'Anek Odia', sans-serif;
    font-weight: 400;
}

body{
    width:1000px;
    margin: 0 auto;
    box-shadow: 0px 3px 10px black;
    margin-top: 10px;
    margin-bottom: 10px;
}

.inhalt, header{
    background-color: rgb(225, 225, 225);
    min-height: 120px;
}

.inhalt{
    padding-left: 20px;
    padding-right: 20px;
    padding-bottom: 30px;
}

h1, h2, h3{
    font-family: 'Anek Odia', sans-serif;
    border-bottom: 1px solid #000000;
    line-height: 75%;
    margin-bottom: 0px;
    margin-top: 0px;
}

h1{
    padding-top: 20px;
    font-weight: 600;
    font-size: 25px;
}

h2{
    font-weight: 600;
    font-size: 18px;
    margin-top: 10px;
}

h3{
    font-weight: 400;
    font-size: 16px;
    margin-top: 20px;
}

.beschreibung{
    font-family: 'Anek Odia', Helvetica, sans-serif;
    font-weight: 600;
    font-size: 20px;
    line-height: 100%;
}

.beschreibung-u{
    font-family: 'Anek Odia', Helvetica, sans-serif;
    font-weight: 400;
    font-size: 16px;
    line-height: 100%;
}

p{
    text-align: justify;
    font-family: Arial, Helvetica, sans-serif;
}

.inline{
    float: right;
    margin-top: 15px;
    border-width: 1px;
    margin-left: 7px;
    padding: 2px;
    background-color: aliceblue;
}

.inline-title{
    height:19px;
    font-family: 'Anek Odia', Helvetica, sans-serif;
    background-color: #d13434;
    margin-bottom: 3px;
    padding-left: 2px;
    color: white;
}

button{
    font-family:  Helvetica, sans-serif;
    line-height: 120%;
    cursor: pointer;
    padding: 3px 15px;
    display: inline-block;
    margin: 5px 0px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-weight: 700;
    outline: none;
    border: 2px solid #000;
    /*transition: all 0.3s;*/
    transition: cubic-bezier(0.215, 0.610, 0.355, 1) 0.2s;
}

button:hover {
    background-color: #000;
    color: aliceblue;
}

input, select{
    font-family:  Helvetica, sans-serif;
    line-height: 120%;
    padding: 3px 3px;
    display: inline-block;
    margin: 5px 2px;
    font-weight: 700;
    border: 2px solid #000;
    transition: all 0.3s;
}

#headerbg {
    z-index:1;
    position:absolute;
}

#headerlogo {
    z-index:2;
    width:300px;
    position:absolute;
    top:25px;
    margin-left:15px;
}

#navbar {
    position: absolute;
    text-align: right;
    top: inherit
    right: 0px;
    z-index: 3;
    color: white;
}
